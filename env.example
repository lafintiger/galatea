# Galatea Environment Configuration
# Copy this to .env and customize as needed

# ============================================
# OLLAMA CONFIGURATION
# ============================================

# Use host Ollama instead of Docker (uncomment to use existing installation)
# OLLAMA_HOST=host.docker.internal:11434

# Default model for chat (smaller = faster, larger = smarter)
# Options: ministral-3:3b (default, fast), qwen3:8b (better), qwen3:32b (best)
DEFAULT_MODEL=ministral-3:3b

# ============================================
# TTS CONFIGURATION
# ============================================

# TTS provider: "piper" (fast, CPU) or "kokoro" (HD quality)
TTS_PROVIDER=kokoro

# ============================================
# TIMEZONE
# ============================================
TZ=America/Los_Angeles

